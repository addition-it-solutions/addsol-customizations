<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="resource_skill_view_form">
            <field name="name">resource.skill.view.form</field>
            <field name="model">resource.skill</field>
            <field name="arch" type="xml">
                <form string="Skills">
                <sheet string="Skill">
                    <group col="4">
                        <field name="name"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="resource_skill_view_tree">
            <field name="name">resource.skill.view..tree</field>
            <field name="model">resource.skill</field>
            <field name="arch" type="xml">
                <tree string="Skills">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_resource_skill" model="ir.actions.act_window">
            <field name="name">Skills</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">resource.skill</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <record model="ir.ui.view" id="resource_level_view_form">
            <field name="name">resource.level.view.form</field>
            <field name="model">resource.level</field>
            <field name="arch" type="xml">
                <form string="Levels">
                <sheet string="Level">
                    <group col="4">
                        <field name="name"/>
                    </group>
                </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="resource_level_view_tree">
            <field name="name">resource.level.view..tree</field>
            <field name="model">resource.level</field>
            <field name="arch" type="xml">
                <tree string="Levels">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="open_view_resource_level" model="ir.actions.act_window">
            <field name="name">Levels</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">resource.level</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <record id="addsol_resource_view" model="ir.ui.view">
            <field name="name">addsol.resource.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Availiable Information">
                        <sheet>
                            <group string="Skill Set">
                                <field name="skill_set" nolabel="1">
                                    <tree string="Skill Set">
                                        <field name="resource"/>
                                        <field name="skill"/>
                                        <field name="level"/>
                                    </tree>
                                </field>       
                            </group>
                            <group string="Billable Date">
                                <label for="billable_start_date" string="Billable Date"/>
                                <div>
                                    <field name="billable_start_date" class="oe_inline"/> - <field name="billable_end_date" class="oe_inline" />
                                </div>
                            </group>
                            <group>
                                <field name="on_bench"/>
                                <field name="project"/>
                                <field name="resume"/>
                            </group>
                        </sheet>
                    </page>
                </notebook>
            </field>
        </record>
        
        
        <!-- Menus -->
        
        <menuitem sequence="11" id="hr.menu_open_view_reource_management_config" parent="hr.menu_hr_configuration" name="Resource Management"/>
        <menuitem name="Skills" action="open_view_resource_skill" id="menu_open_view_resource_skill" parent="hr.menu_open_view_reource_management_config" sequence="12"/>
        <menuitem name="Levels" action="open_view_resource_level" id="menu_open_view_resource_level" parent="hr.menu_open_view_reource_management_config" sequence="13"/>
        
    </data>
</openerp>
